@import '../../../utils/utils.wxss';

Page {
  background-color: #f5f5f5;
}

.content {
  padding-left: 24rpx;
  padding-right: 24rpx;
  margin: 24rpx 0;
  background-color: #fff;
}

.title {
  display: flex;
  align-items: center;
  height: 85rpx;
  color: #000;
  border-bottom: 1rpx solid #9b9b9b;
}

.rect {
  width: 12rpx;
  height: 40rpx;
  background-color: #00a6ff;
  margin-right: 12rpx;
}

/* form */

.form {
  padding: 20rpx 0;
}

.item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 50rpx;
}

.label1 {
  max-width: 80%;
}

.label2 {
}

.label3 {
}

/* 修改商品btn */

.goodsBtn {
  margin: 0;
  /* width: 91rpx; */
  padding: 0 12rpx;
  height: 42rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #9b9b9b;
}

/* 下面按钮 */

.btn_submit {
  box-sizing: content-box;
  background: linear-gradient(to bottom, #00a7ff, #0289fe);
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 89rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 28rpx;
}

.btn_submit_active {
  background: linear-gradient(to bottom, #0ca4f4, #0e89f3);
}

.btn_submit.isX {
  padding-bottom: 62rpx;
}
