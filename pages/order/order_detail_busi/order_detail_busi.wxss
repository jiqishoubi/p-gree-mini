@import '../../../utils/utils.wxss';

Page {
  background-color: #f5f5f5;
}

.container {
  padding-left: 24rpx;
  padding-right: 24rpx;
  padding-bottom: 24rpx;
  margin: 24rpx 0;
  background-color: #fff;
}

.title {
  height: 85rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #9b9b9b;
}

.rect {
  width: 8rpx;
  height: 29rpx;
  background-color: #00A6FF;
  margin-right: 12rpx;
}

.form {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #d7d6d6;
}

.form:last-child {
  border-bottom: none;
}

.item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 44rpx;
}

.btn_wrap {
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.btn {
  width: auto;
  height: 58rpx;
  margin-left: 39rpx;
  margin-right: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  font-size: 24rpx;
  color: #fff;
  background-color: #00A6FF;
}

.btn_active {
  background-color: #029cee;
}

.noborder {
  border: none !important;
}

/* 二维码modal */

.share-canvas {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.code_modal {
  width: 628rpx;
  background-color: #fff;
}

.code_title {
  height: 147rpx;
  background-color: #00A6FF;
  display: flex;
  align-items: center;
  justify-content: center;
}

.code_title_logo {
  width: 298rpx;
  height: 52rpx;
}

.code {
  /* width: 362rpx;
  height: 362rpx;
  background-color: #ebebeb; */
  margin: 58rpx auto 37rpx;
}

.code_img {
  /* width: 100%;
  height: 100%; */
  margin: 0 auto;
}

.code_info {
  color: #000;
}

.code_info_count {
  font-size: 36rpx;
}

.code_info_title {
  font-size: 24rpx;
}

.code_btn {
  margin: 70rpx 47rpx 46rpx;
  font-size: 24rpx;
  background-color: #fff;
  width: 204rpx;
  height: 85rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.code_btn_hover {
  background-color: #f0f0f0;
}
