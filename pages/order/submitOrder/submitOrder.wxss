@import '../../../utils/utils.wxss';

Page {
  background-color: #f5f5f5;
}

/* list */

.list {
  background-color: #fff;
  padding: 0 24rpx;
  margin-bottom: 160rpx;
}

/* item */

.item_content {
  padding: 24rpx 0;
  height: 184rpx;
}

.item_img_box {
  width: 180rpx;
  height: 180rpx;
  border: 1px solid #e6e6e6;
}

.item_img {
  width: 100%;
  height: 100%;
}

.item_content_content {
  flex: 1 0 0;
  width: 0;
  height: 100%;
  padding-left: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item_tag {
  height: 31rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  border: 1px solid #e6e6e6;
  padding: 0 12rpx;
  margin-right: 12rpx;
}

/* item_form */

.item_form_item {
  height: 85rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  /* border-bottom: 1px solid #9b9b9b; */
}

.item_form_label {
  width: 100rpx;
  text-align: justify;
  text-align-last: justify;
}

.item_form_input {
  height: 100%;
  flex: 1 0 0;
  width: 0;
  text-align: right;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

/* 提交按钮 */

.btn {
  box-sizing: content-box;
  background: linear-gradient(to bottom, #00a7ff, #0289fe);
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 89rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 28rpx;
  z-index: 666;
}

.btn_active {
  background: linear-gradient(to bottom, #0ca4f4, #0e89f3);
}

.isX {
  padding-bottom: 62rpx;
}

/* 下面按钮 提交订单 */

.ctrl {
  box-sizing: content-box;
  height: 105rpx;
  width: calc(100% - 48rpx);
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  padding-left: 24rpx;
  padding-right: 24rpx;
}

.submit {
  width: 197rpx;
  height: 79rpx;
  margin: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #00a6ff;
  color: #fff;
  font-size: 33rpx;
}

.submit_hover {
  background-color: #0397e6;
}

/* 结果pop */

.popup_result {
  width: 604rpx;
  height: 393rpx;
  border-radius: 12rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #000;
}

.popup_result_title {
  font-size: 33rpx;
}

.popup_result_content {
  margin-top: 15rpx;
  margin-bottom: 80rpx;
}

.know {
  width: 242rpx;
  height: 72rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(to bottom, #00a7ff, #0289fe);
  color: #fff;
  font-size: 25rpx;
}

.know_hover {
  background: linear-gradient(to bottom, #0ca4f4, #0e89f3);
}
