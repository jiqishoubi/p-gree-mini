@import '../../../utils/utils.wxss';

Page {
  background-color: #f5f5f5;
}

.container {
  margin: 24rpx 0;
}

.item {
  padding-left: 24rpx;
  padding-right: 24rpx;
  height: 84rpx;
  border-bottom: 1rpx solid #d7d6d6;
  display: flex;
  align-items: center;
  background-color: #fff;
}

.item:last-child {
  border-bottom: none;
}

.label {
  width: 139rpx;
  color: #000;
}

.goodsLabel {
  width: auto;
}

.input {
  height: 100%;
  flex: 1 0 0;
  padding-left: 35rpx;
}

/* 下面按钮 下一步 */

.nextStep {
  box-sizing: content-box;
  background: linear-gradient(to bottom, #00a7ff, #0289fe);
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 89rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 32rpx;
  z-index: 12;
}

.nextStep_active {
  background: linear-gradient(to bottom, #0ca4f4, #0e89f3);
}

.isX {
  padding-bottom: 62rpx;
}
