<!-- 选择商品2 -->
<view class="chooseGood">
  <van-tree-select
    items="{{treeSelectItems}}"
    main-active-index="{{ mainActiveIndex }}"
    active-id="{{ activeId }}"
    bind:click-nav="onClickNav"
    bind:click-item="onClickItem"
  >
    <view class="item_content flexCenter flexBetween" slot='content'>
      <view class="item_img_box">
        <image class="item_img" src="{{item.img}}" alt=''></image>
      </view>
      <view class="item_content_content">
        <view class="item_content_content_top">
          <view style="color:#000;font-size:25rpx;">{{item.mname}}</view>
          <view style="color:#9B9B9B;font-size:22rpx;margin:10rpx 0;">{{item.desc}}</view>
          <view class="flex">
            <view wx:for="{{item.tag}}"
              wx:for-index="tagIndex" 
              wx:for-item="tagName"
              wx:key="tagIndex"
              class="item_tag"
            >{{tagName}}</view>
          </view>
        </view>
        
        <view>{{item.price}}元</view>
      </view>
    </view>
  </van-tree-select>
</view>