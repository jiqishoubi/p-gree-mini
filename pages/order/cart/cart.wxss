@import '../../../utils/utils.wxss';

Page {
  background-color: #f5f5f5;
}

/* 商品 */

.good {
  padding: 28rpx 24rpx;
}

.good_info {
  color: #000;
  font-size: 25rpx;
}

.good_count_ctrl {
  width: 40rpx;
  height: 40rpx;
}

.good_count {
  margin: 0 36rpx;
}

/* 附加信息 */

.form {
  padding-left: 24rpx;
  padding-right: 24rpx;
  background-color: #fff;
  margin: 24rpx 0;
}

.form_title, .form_item {
  height: 85rpx;
  display: flex;
  align-items: center;
}

.form_title {
  font-size: 28rpx;
  color: #000;
}

.form_item {
  color: #9b9b9b;
  justify-content: space-between;
  border-bottom: 1px solid #e6e6e6;
}

.form_item:last-child {
  border-bottom: none;
}

.form_label {
  width: 107rpx;
  text-align: justify;
  text-align-last: justify;
}

.form_input {
  flex: 1 0 0;
  width: 0;
  padding-left: 36rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  color: #000;
}

.form_input_input {
  width: 100%;
  height: 100%;
}

.form_input_placeholder {
  color: #9b9b9b;
}

/* 下面按钮 */

.btn_submit {
  box-sizing: content-box;
  background: linear-gradient(to bottom, #00a7ff, #0289fe);
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 89rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 28rpx;
}

.btn_submit_active {
  background: linear-gradient(to bottom, #0ca4f4, #0e89f3);
}

.btn_submit.isX {
  padding-bottom: 62rpx;
}


/* 结果modal */
.result_modal{
  width: 604rpx;
  height: 393rpx;
  color: #000;
}
.btn_result{
  box-sizing: content-box;
  background: linear-gradient(to bottom, #00a7ff, #0289fe);
  width: 242rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 25rpx;
}