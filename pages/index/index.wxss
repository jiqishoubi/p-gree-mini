@import '../../utils/utils.wxss';

Page {
  background-color: #f5f5f5;
}

/* 轮播图 */

.banner {
  box-sizing: border-box;
  margin: 24rpx;
}

.slide-image {
  width: 100%;
  height: 100%;
}

/* 位置 */

.location {
  margin: 24rpx;
  padding-left: 24rpx;
  padding-right: 24rpx;
  height: 72rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.location_icon {
  width: 20rpx;
  height: 30rpx;
  margin-right: 14rpx;
}

/* 导航 */

.nav {
  margin: 24rpx;
  padding: 19rpx;
  box-sizing: border-box;
  border-radius: 12rpx;
  flex-wrap: wrap;
}

.nav_item {
  width: 324rpx;
  height: 133rpx;
  background: url(https://cdn.s.bld365.com/getli_index_nav_bg.png) no-repeat center center/100% 100%;
  color: #fff;
}

.nav_img {
  width: 34rpx;
  height: 34rpx;
  margin-right: 12rpx;
}

.nav_title {
  font-size: 29rpx;
}

/* 列表 */

.list {
  margin: 24rpx;
  padding-left: 24rpx;
  padding-right: 24rpx;
  padding-top: 12rpx;
  padding-bottom: 12rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-bottom: 160rpx;
}

.list_item {
  height: 121rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-radius: 6rpx;
  width: calc(50% - 12rpx);
  margin-top: 12rpx;
  margin-bottom: 12rpx;
}

.list_item_img {
  width: 72rpx;
  height: 72rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.list_item_content {
  flex: 1 0 0;
  font-size: 26rpx;
}

.list_item_count {
  font-size: 40rpx;
  font-weight: bold;
}
