<!-- 选择商品 -->
<view class="choose_page">
  <!-- 搜索 -->
  <view class="search_wrap bg_white">
    <view class="search_content flexCenter">
      <van-icon name="search" 
        size="1.5em" 
        color="#9B9B9B"
      />
      <input class="search_input"
        placeholder="请搜索产品名称或助记码"
        confirm-type='搜索'
      ></input>
    </view>
  </view>

  <!-- content -->
  <view class="content">
    <view class="content2"> 
      <!-- 左侧 -->
      <view class="left" style="height:{{rightheight}}">
        <view wx:for="{{leftlist}}" wx:key="index"
          class="left_item textOmit{{active_left==index?' active':''}}"
          bindtap="chooseleft"
          data-param="{{index}}"
        >
          {{item}}
        </view>
      </view>
      <!-- 右侧 -->
      <view class="right" style="height:{{rightheight}}">
        <view wx:for="{{rightlist}}" wx:key="index"
          class="right_item{{active_right==index?' active':''}}"
        >
        </view>
      </view>
    </view>
  </view>
</view>