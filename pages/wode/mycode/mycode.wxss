@import '../../../utils/utils.wxss';

Page {
  background-color: #f5f5f5;
}

.mycode_page {
  height: 100%;
}

.container {
  box-sizing: border-box;
  width: 653rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding-left: 67rpx;
  padding-right: 67rpx;
  padding-top: 49rpx;
  padding-bottom: 49rpx;
  color: #000;
  transform: translate(-50%,-55%);
}

/* 上面 */

.top {
  position: relative;
}

.head_box {
  width: 118rpx;
  height: 118rpx;
  border-radius: 12rpx;
  overflow: hidden;
  margin-right: 22rpx;
}

.head {
  width: 100%;
  height: 100%;
}

.top_content {
  flex: 1 0 0;
  width: 0;
}

.top_name {
  font-size: 37rpx;
}

.shop {
  position: absolute;
  top: 0;
  right: 0;
}

/* 中间 */

.img_box {
  /* width: 518rpx;
