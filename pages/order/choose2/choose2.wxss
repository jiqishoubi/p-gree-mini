@import '../../../utils/utils.wxss';

Page {
  height: 100%;
}

.choose_page {
  height: 100%;
  overflow: hidden;
}

/* 搜索 */

.search_wrap {
  position: relative;
  z-index: 2;
  box-sizing: border-box;
  height: 82rpx;
  overflow: hidden;
}

.search_content {
  background-color: #f5f5f5;
  border-radius: 5rpx;
  height: 66rpx;
  margin: 8rpx 24rpx 0;
  padding-left: 19rpx;
  padding-right: 19rpx;
}

.search_input {
  flex: 1 0 0;
  height: 100%;
  padding-left: 16rpx;
}

/* content */

.content {
  box-sizing: border-box;
  /* 82+89 */
  height: calc(100% - 171rpx);
  display: flex;
}

.left {
  width: 149rpx;
  height: 100%;
  background-color: #f3f3f3;
  overflow-x: hidden;
  overflow-y: auto;
}

.left_item {
  box-sizing: border-box;
  width: 100%;
  height: 97rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  white-space: normal !important;
  padding: 5rpx 5rpx;
}

.left_item.active {
  border-left: 5rpx solid #00a6ff;
  background-color: #fff;
}

.right {
  box-sizing: border-box;
  height: 100%;
  width: calc(100% - 149rpx);
  overflow-x: hidden;
  overflow-y: auto;
  padding: 0 24rpx;
}

/* 暂无数据 */

.noresult {
  text-align: center;
  padding-top: 60rpx;
}

/* 右侧item */

.item_content {
  padding: 24rpx 0;
  border-bottom: 1px solid #e6e6e6;
  height: 184rpx;
}

.item_img_box {
  width: 180rpx;
  height: 180rpx;
  border: 1px solid #e6e6e6;
}

.item_img {
  width: 100%;
  height: 100%;
}

.item_content_content {
  flex: 1 0 0;
  width: 0;
  height: 100%;
  padding-left: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item_tag {
  height: 31rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  border: 1px solid #e6e6e6;
  padding: 0 12rpx;
  margin-right: 12rpx;
}

/* 步进器组件 */

.stepplusicon, .stepminusicon {
  width: 40rpx !important;
  height: 40rpx !important;
  background-color: #00a6ff !important;
  border-radius: 50% !important;
  overflow: hidden !important;
}

/* 下面按钮 下一步 */

.nextStep {
  box-sizing: content-box;
  background: linear-gradient(to bottom, #00a7ff, #0289fe);
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 89rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 28rpx;
  z-index: 666;
}

.nextStep_active {
  background: linear-gradient(to bottom, #0ca4f4, #0e89f3);
}

.isX {
  padding-bottom: 62rpx;
}
