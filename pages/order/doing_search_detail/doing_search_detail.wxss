@import '../../../utils/utils.wxss';


/* 搜索结果 */

.result {
  border: 1px solid #e6e6e6;
  border-radius: 5rpx;
  overflow: hidden;
  margin: 24rpx 48rpx;
}

.result_title, .result_item {
  height: 85rpx;
  padding-left: 24rpx;
  padding-right: 24rpx;
  display: flex;
  align-items: center;
}

.result_title {
  background-color: #eee;
}

.result_item {
  justify-content: space-between;
  border-bottom: 1px solid #e6e6e6;
}

.result_item:last-child {
  border-bottom: none;
}

.result_label {
  color: #9b9b9b;
}

/* 下面按钮 */

.btn_submit {
  box-sizing: content-box;
  background: linear-gradient(to bottom, #00a7ff, #0289fe);
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 89rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 28rpx;
}

.btn_submit_active {
  background: linear-gradient(to bottom, #0ca4f4, #0e89f3);
}

.btn_submit.isX {
  padding-bottom: 62rpx;
}
