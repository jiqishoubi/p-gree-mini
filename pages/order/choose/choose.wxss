@import '../../../utils/utils.wxss';

Page {
  height: 100%;
}

.choose_page {
  height: 100%;
  overflow: hidden;
}

/* 搜索 */

.search_wrap {
  overflow: hidden;
  position: relative;
  z-index: 2;
  box-sizing: border-box;
  height: 82rpx;
}

.search_content {
  background-color: #f5f5f5;
  border-radius: 5rpx;
  height: 66rpx;
  margin: 8rpx 24rpx 0;
  padding-left: 19rpx;
  padding-right: 19rpx;
}

.search_input {
  flex: 1 0 0;
  height: 100%;
  padding-left: 16rpx;
}

/* content */

.content {
  height: calc(100% - 82rpx);
}

.content2 {
  height: 100%;
  display: flex;
  overflow-x: hidden;
  overflow-y: auto;
}

.left {
  width: 149rpx;
  min-height: 100%;
  background-color: #f3f3f3;
}

.left_item {
  box-sizing: border-box;
  width: 100%;
  height: 97rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.left_item.active {
  border-left: 5rpx solid #00a6ff;
  background-color: #fff;
}

.right {
  width: calc(100% - 149rpx);
  overflow-x: hidden;
  overflow-y: auto;
}
.right_item{
  height: 244rpx;
  background-color: red;

  margin: 24rpx;
}
