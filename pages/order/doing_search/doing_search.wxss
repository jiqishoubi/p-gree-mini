@import '../../../utils/utils.wxss';

/* 搜索框 */

.search_wrap {
  margin: 48rpx;
  padding-left: 24rpx;
  padding-right: 24rpx;
  height: 97rpx;
}

.search_input {
  flex: 1 0 0;
  height: 100%;
}

.search_code {
  width: 36rpx;
  height: 36rpx;
  margin-left: 20rpx;
}

/* 搜索按钮 */

.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 97rpx;
  background: linear-gradient(to bottom, #00a7ff, #0289fe);
  color: #fff;
  font-size: 33rpx;
  margin: 48rpx;
}

.btn_active {
  background: linear-gradient(to bottom, #0ca4f4, #0e89f3);
}

/* 搜索结果 */

.result {
  border: 1px solid #e6e6e6;
  border-radius: 5rpx;
  overflow: hidden;
  margin: 24rpx 48rpx;
}

.result_content {
  margin-left: 24rpx;
  margin-right: 24rpx;
  padding: 10rpx 0;
  border-bottom: 1px solid #e6e6e6;
}

.result_content:last-child {
  border-bottom: none;
}

.result_title {
  height: 85rpx;
  padding-left: 24rpx;
  padding-right: 24rpx;
  display: flex;
  align-items: center;
}

.result_item {
  height: 55rpx;
  display: flex;
  align-items: center;
}

.result_title {
  background-color: #eee;
}

.datetime {
  font-size: 23rpx;
}

.result_item {
  justify-content: space-between;
}

.result_label {
  color: #9b9b9b;
}

.result_input {
  width: calc(100% - 150rpx);
}

/* 下面按钮 */

.btn_submit {
  box-sizing: content-box;
  background: linear-gradient(to bottom, #00a7ff, #0289fe);
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 89rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 28rpx;
}

.btn_submit_active {
  background: linear-gradient(to bottom, #0ca4f4, #0e89f3);
}

.btn_submit.isX {
  padding-bottom: 62rpx;
}
