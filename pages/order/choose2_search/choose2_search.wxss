@import '../../../utils/utils.wxss';

/* 搜索框 */

.search_wrap {
  height: 94rpx;
  display: flex;
  align-items: center;
  background-color: #f4f4f4;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
}

.search_input_wrap {
  height: 66rpx;
  flex: 1 0 0;
  width: 0;
  display: flex;
  align-items: center;
  background-color: #fff;
  margin-left: 24rpx;
  padding: 0 19rpx;
}

.search_input {
  flex: 1 0 0;
  width: 0;
  height: 100%;
  padding-left: 16rpx;
}

.cancel_btn {
  color: #4a4a4a;
  font-size: 25rpx;
  height: 100%;
  padding: 0 24rpx;
}

/* list */
/* 右侧item */

.item_content {
  padding: 24rpx 0;
  border-bottom: 1px solid #e6e6e6;
  height: 184rpx;
}

.item_img_box {
  width: 180rpx;
  height: 180rpx;
  border: 1px solid #e6e6e6;
}

.item_img {
  width: 100%;
  height: 100%;
}

.item_content_content {
  flex: 1 0 0;
  width: 0;
  height: 100%;
  padding-left: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item_tag {
  height: 31rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  border: 1px solid #e6e6e6;
  padding: 0 12rpx;
  margin-right: 12rpx;
}


/* 下面按钮 下一步 */

.nextStep {
  box-sizing: content-box;
  background: linear-gradient(to bottom, #00a7ff, #0289fe);
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 89rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 28rpx;
  z-index: 666;
}

.nextStep_active {
  background: linear-gradient(to bottom, #0ca4f4, #0e89f3);
}

.isX {
  padding-bottom: 62rpx;
}