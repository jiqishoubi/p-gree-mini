@import '../../../utils/utils.wxss';

Page {
  background-color: #f5f5f5;
}

/* 搜索结果 */

.result {
  border: 1px solid #e6e6e6;
  border-radius: 5rpx;
  overflow: hidden;
  margin: 24rpx 48rpx;
}

.result_content {
  margin-left: 24rpx;
  margin-right: 24rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  padding: 10rpx 24rpx;
  border: 1px solid #e6e6e6;
  border-radius: 5rpx;
  background-color: #fff;
}

.result_content:last-child {
  border-bottom: none;
}

.result_title {
  height: 85rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.result_item {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.result_label {
  color: #9b9b9b;
}

.result_input {
  width: calc(100% - 150rpx);
  height: 100%;
  padding-left: 45rpx;
  display: flex;
  align-items: center;
}

.result_input_goods {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.result_input_name {
  max-width: calc(100% - 20px);
}

/* 删除按钮 */

.deleteBtn {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #9b9b9b;
  margin: 0;
  width: 107rpx;
  height: 50rpx;
}

/* 下面按钮 */

.btn_submit {
  box-sizing: content-box;
  background: linear-gradient(to bottom, #00a7ff, #0289fe);
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 89rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 28rpx;
}

.btn_submit_active {
  background: linear-gradient(to bottom, #0ca4f4, #0e89f3);
}

.btn_submit.isX {
  padding-bottom: 62rpx;
}
