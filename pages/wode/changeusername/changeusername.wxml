<!-- 修改用户名 -->
<view class="changeusername_page">
  <view class="container">
    <view class="item">
      <view class="label">用 户 名</view>
      <input class="input"
        placeholder="请输入"
        value="{{username}}"
        bindinput="onInputChange"
        data-key="username"
      ></input>
    </view>
  </view>

  <!-- 按钮 -->
  <view class="btn_submit{{isX?' isX':''}}" 
    hover-class="btn_submit_active"
    hover-stay-time="{{150}}"
    bindtap="submit"
  >修改用户名</view>
</view>