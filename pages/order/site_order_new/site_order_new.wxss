@import '../../../utils/utils.wxss';

Page {
  height: 100%;
  overflow: hidden;
  background-color: #f5f5f5;
}

.renchou_page {
  height: 100%;
  overflow-y: auto;
  position: relative;
}

.item.title {
  color: #000;
}

.rect {
  width: 12rpx;
  height: 40rpx;
  background-color: #00a6ff;
  margin-right: 12rpx;
}

.container {
  margin: 24rpx 0;
  background-color: #fff;
}

.item {
  padding-left: 24rpx;
  padding-right: 24rpx;
  height: 84rpx;
  border-bottom: 1rpx solid #d7d6d6;
  display: flex;
  align-items: center;
  background-color: #fff;
}

.item:last-child {
  border-bottom: none;
}

.label {
  width: 139rpx;
  color: #000;
}

.goodsLabel {
  width: auto;
}

.input {
  height: 100%;
  flex: 1 0 0;
  padding-left: 35rpx;
  
  /* width: calc(100% - 139rpx);
  height: 100%;
  line-height:84rpx;
  text-align: right; */
}

/* 导购员picker */

.salerpicker_wrap {
  height: 100%;
  flex: 1 0 0;
  width: 0;
}

.salerpicker {
  /* height: 100%;
  min-height: 100%; */
  height: 84rpx;
  padding-left: 35rpx;
  display: flex;
  align-items: center;
}

/* 按钮 */

.btn {
  box-sizing: content-box;
  background-color: #00a6ff;
  color: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 89rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  z-index: 10;
}

.btn_active {
  background-color: #0096e7;
}

.btn.isX {
  padding-bottom: 62rpx;
}

/* 二维码modal */

.share-canvas {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.code_modal {
  width: 628rpx;
  background-color: #fff;
}

.code_title {
  height: 147rpx;
  background-color: #00a6ff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.code_title_logo {
  width: 298rpx;
  height: 52rpx;
}

.code {
  /* width: 362rpx;
  height: 362rpx;
  background-color: #ebebeb; */
  margin: 58rpx auto 37rpx;
}

.code_img {
  /* width: 100%;
  height: 100%; */
  margin: 0 auto;
}

.code_info {
  color: #000;
}

.code_info_count {
  font-size: 36rpx;
}

.code_info_title {
  font-size: 24rpx;
}

.code_btn {
  margin: 70rpx 47rpx 46rpx;
  font-size: 24rpx;
  background-color: #fff;
  height: 85rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.code_btn_hover {
  background-color: #f0f0f0;
}

/* 商品列表 */

.goodsList {
  box-sizing: border-box;
  width: 100%;
  /* margin-top: -22rpx; */
  padding-left: 24rpx;
  padding-right: 24rpx;
  background-color: #fff;
  max-height: 464rpx;
  position: absolute;
  top: 84rpx;
  left: 0;
  z-index: 11;
  /* margin-left: -24rpx;
  margin-right: -24rpx; */
}

.goodsList .input {
  display: flex !important;
  align-items: center !important;
  justify-content: flex-end !important;
}

.goodsList .van-stepper {
  display: flex !important;
  align-items: center !important;
  justify-content: flex-end !important;
}

.item_wrap {
  margin-top: 92rpx;
}

/* 商品列表的mask */

.goodsList_mask {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 10;
}

/* 商品列表的搜索 */

.goodsListSearch {
  height: 66rpx;
  background-color: #f5f5f5;
  border-radius: 5rpx;
  display: flex;
  align-items: center;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
  padding-left: 15rpx;
  padding-right: 15rpx;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
}

.goodsListSearch_input {
  flex: 1 0 0;
  width: 0;
  height: 100%;
  padding-left: 15rpx;
}

/* 已选择的商品列表 */

.selectedItem {
  padding-left: 24rpx;
  padding-right: 24rpx;
  margin: 0 24rpx;
  justify-content: space-between !important;
}

.selectedItem .label1 {
  max-width: 80%;
}

