@import '../../../utils/utils.wxss';

Page {
  background-color: #f5f5f5;
}

/* 列表 */

.item {
  margin: 24rpx;
  border-radius: 5rpx;
  padding: 0 24rpx;
}

.item_title {
  height: 88rpx;
  border-bottom: 1px solid #e6e6e6;
}

.item_content {
  padding: 24rpx 0;
  border-bottom: 1px solid #e6e6e6;
  height: 184rpx;
}

.item_img_box {
  width: 180rpx;
  height: 180rpx;
  border: 1px solid #e6e6e6;
}

.item_img {
  width: 100%;
  height: 100%;
}

.item_content_content {
  flex: 1 0 0;
  width: 0;
  height: 100%;
  padding-left: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item_tag {
  height: 31rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  border: 1px solid #e6e6e6;
  padding: 0 12rpx;
  margin-right: 12rpx;
}

/* item的按钮 */

.item_ctrl_wrap {
  justify-content: flex-end;
  padding: 13rpx 0;
}

.btn1, .btn2 {
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  height: 58rpx;
  border-radius: 12rpx;
  padding: 0 18rpx;
  min-width: 107rpx;
  border: 1px solid #00a6ff;
  margin-left: 38rpx;
}

.btn1 {
  color: #00a6ff;
}

.btn2 {
  background-color: #00a6ff;
  color: #fff;
}

/* 模态框 */
.datepicker{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
}
